<% form_tag :action=> "signup" do %>

  <h2><%= I18n.t(:signup)%></h2>
  <%= error_messages_for 'user' %><br/>
  
  <label for="user_name"><%= I18n.t(:name)%>:</label>
  <%= text_field "user", "name", :size => 30 %><%= I18n.t(:expl_name)%><br/>
  <label for="user_email"><%= I18n.t(:email)%>:</label>
  <%= text_field "user", "email", :size => 30 %><%= I18n.t(:expl_email)%><br/>
  <label for="user_password"><%= I18n.t(:pwd)%>:</label>
  <%= password_field "user", "password", :size => 30 %><br/>
  <label for="user_password_confirmation"><%= I18n.t(:pwd_confirm)%>:</label>
  <%= password_field "user", "password_confirmation", :size => 30 %><%= I18n.t(:expl_pwd_confirm)%><br/>
  <label for="submit">&nbsp;</label>
  <input type="submit" value="<%= I18n.t(:signup)%> &#187;" class="submitbutton" />
<% end %>

<b><%= flash['error'] %></b>
